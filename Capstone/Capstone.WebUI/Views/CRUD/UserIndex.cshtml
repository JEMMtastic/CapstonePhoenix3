@model IEnumerable<Capstone.WebUI.Domain.Entities.User>

@{
    ViewBag.Title = "Users";
}

<h2>All Users</h2>
<table>
    <tr class="tableHeadings">
        <th>Name</th>
        <th>Access Level</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Store Number</th>
    </tr>
<div class="backgroundTableColorTest">
@foreach (var item in Model) {
    <tr class="tableDataRow">
        <td>@Html.ActionLink(item.UserFName + " " + item.UserLName, "UserEdit", "CRUD", new { item.UserId }, null)</td>
        <td>@Html.DisplayFor(modelItem => item.AccessLevel)</td>
        <td>@Html.DisplayFor(modelItem => item.UserEmail)</td>
        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
        <td>@Html.DisplayFor(modelItem => item.BvLocation.BvStoreNum)</td>
        <td>
            @using (Html.BeginForm("UserDelete", "CRUD", new { item.UserId }))
            {
               <input type ="submit" value ="Delete" />
            }
        </td>
    </tr>
}
</div>
</table>
<p>@Html.ActionLink("Add a new user", "UserCreate")</p>



